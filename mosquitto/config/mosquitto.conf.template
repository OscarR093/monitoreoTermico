# ... (configuración general y listener 1883)
persistence true
allow_anonymous false
password_file /mosquitto/config/password.txt
log_dest file /mosquitto/log/mosquitto.log
listener 1883

# --- Listener EXTERNO (MQTTS) ---
# Usamos un marcador de posición para el dominio
listener 8883
certfile /data/caddy/certificates/acme-v02.api.letsencrypt.org-directory/{$DOMAIN_URL}/{$DOMAIN_URL}.crt
keyfile /data/caddy/certificates/acme-v02.api.letsencrypt.org-directory/{$DOMAIN_URL}/{$DOMAIN_URL}.key